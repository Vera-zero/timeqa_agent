{
  "chunk": {
    "strategy": "fixed_size",
    "chunk_size": 1200,
    "chunk_overlap": 100,
    "max_sentences": 10,
    "sentence_overlap": 2,
    "min_chunk_size": 500,
    "max_chunk_size": 2000,
    "preserve_sentences": false
  },
  "extractor": {
    "model": "deepseek-chat",
    "base_url": "https://api.deepseek.com/chat/completions",
    "temperature": 0,
    "max_retries": 3,
    "timeout": 180,
    "batch_size": 1,
    "enable_multi_round": false,
    "max_rounds": 2,
    "review_temperature": 0.0,
    "prior_events_context_mode": "full",
    "prior_events_window_size": 3
  },
  "event_filter": {
    "enabled": true
  },
  "event_validator": {
    "enabled": true,
    "model": "deepseek-chat",
    "base_url": "https://api.deepseek.com/chat/completions",
    "temperature": 0,
    "max_retries": 3,
    "timeout": 60
  },
  "disambiguator": {
    "embed_model": "deepseek-embed",
    "embed_base_url": "https://api.deepseek.com/v1",
    "embed_batch_size": 100,
    "similarity_threshold": 0.8,
    "canonical_name_weight": 10.0
  },
  "timeline": {
    "model": "deepseek-chat",
    "base_url": "https://api.deepseek.com/chat/completions",
    "temperature": 0,
    "max_retries": 3,
    "timeout": 180,
    "enable_iterative": false,
    "iterative_batch_size": 20,
    "include_timeline_context": true,
    "max_context_timelines": 50,
    "sort_events_by_time": true
  },
  "graph_store": {
    "store_original_sentence": true,
    "store_chunk_metadata": true,
    "store_entity_aliases": true
  },
  "retriever": {
    "top_k": 10,
    "score_threshold": 0.0,
    "include_metadata": true,
    "fuzzy_match": true,
    "case_sensitive": false,
    "semantic_model_type": "contriever",
    "semantic_model_name": "./models/contriever-msmarco",
    "semantic_model_device": "cpu",
    "contriever_normalize": true,
    "dpr_ctx_encoder": "facebook/dpr-ctx_encoder-single-nq-base",
    "dpr_question_encoder": "facebook/dpr-question_encoder-single-nq-base",
    "bge_m3_model_path": "./models/bge-m3/bge-m3",
    "embedding_dim": 768,
    "embed_batch_size": 32,
    "similarity_threshold": 0.35,
    "keyword_algorithm": "bm25",
    "bm25_k1": 1.5,
    "bm25_b": 0.75,
    "bm25_use_stemming": false,
    "bm25_remove_stopwords": false,
    "min_keyword_length": 2,
    "vector_index_type": "flat",
    "vector_metric": "cosine",
    "keyword_weight": 0.0,
    "semantic_weight": 1.0,
    "fusion_mode": "rrf",
    "rrf_k": 60.0,
    "enable_keyword": false,
    "enable_semantic": true
  },
  "voting": {
    "entity_layer_weight": 0.25,
    "timeline_layer_weight": 0.30,
    "event_layer_weight": 0.45,
    "entity_decay_factor": 0.85,
    "timeline_decay_factor": 0.95,
    "fusion_mode": "rrf",
    "rrf_k": 60,
    "min_votes": 1,
    "min_score": 0.0,
    "entity_retrieve_multiplier": 2.0,
    "timeline_retrieve_multiplier": 2.0,
    "event_retrieve_multiplier": 2.0,
    "enable_entity_layer": true,
    "enable_timeline_layer": true,
    "enable_event_layer": true,
    "vote_count_alpha": 0.25,
    "vote_count_beta": 0.75
  },
  "hierarchical": {
    "enabled": true,
    "k1_entities": 3,
    "k2_timelines": 5,
    "k3_events": 10,
    "entity_score_threshold": 0.0,
    "timeline_score_threshold": 0.0,
    "event_score_threshold": 0.0,
    "include_intermediate_results": true
  },
  "query_parser": {
    "enabled": true,
    "model": "deepseek-chat",
    "base_url": "https://api.deepseek.com/chat/completions",
    "temperature": 0,
    "max_retries": 3,
    "timeout": 180
  },
  "data_dir": "data/timeqa",
  "corpus_dir": "data/timeqa/corpus",
  "output_dir": "data/timeqa/processed"
}